<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/scada_bold</item>
        <item name="android:fontFamily">@font/scada_bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="Title.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Title.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="Subtitle1.Regular">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Body.Light">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="Caption1" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Caption2" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/scada_regular</item>
        <item name="android:fontFamily">@font/scada_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Caption2.Bold" >
        <item name="fontFamily">@font/scada_bold</item>
        <item name="android:fontFamily">@font/scada_bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Caption1.Regular">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_56sdp</item>
        <item name="titleTextAppearance">@style/Toolbar.Title</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="RoundedButton.Primary">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="RoundedButton.Accent">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="RoundedTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RoundedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/bg_rounded_btn</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="RoundedEditText.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="RoundedEditText.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:background">@drawable/bg_search_edittext</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:drawableRight">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
    </style>

    <style name="TabText" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ChipCategory" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:background">@drawable/bg_category</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:paddingLeft">@dimen/_12sdp</item>
        <item name="android:paddingRight">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_3sdp</item>
        <item name="android:paddingBottom">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
</resources>
