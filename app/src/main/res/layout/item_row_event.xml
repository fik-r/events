<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/thumbnail"
            android:maxHeight="@dimen/_200sdp"
            android:scaleType="fitXY"
            android:src="@android:color/darker_gray"
            android:transitionName="iv_thumbnail" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_category"
        style="@style/ChipCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Science"
        android:transitionName="tv_category" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Body.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/short_dummy_text"
        android:transitionName="tv_title" />

    <TextView
        android:id="@+id/tv_status"
        style="@style/Caption2.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="end"
        android:text="Finished" />
</LinearLayout>